{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone"
  ],
  "schedule": ["at 0 * * *", "between 0 9 * * *"],
  "prConcurrentLimit": 5,
  "assignees": [
    "dev-satoshi"
  ],
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major update"],
      "dependencyDashboardApproval": true
    }
  ]
}